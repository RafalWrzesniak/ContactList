<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="mainBorderPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ContactListPackage.Controller">
   <center>
      <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn prefWidth="100" text="Name" />
          <TableColumn prefWidth="100" text="Surname" />
            <TableColumn prefWidth="100" text="Phone" />
            <TableColumn prefWidth="100" text="Note" />
        </columns>
      </TableView>
   </center>
   <top>
      <ButtonBar maxWidth="-Infinity" BorderPane.alignment="TOP_LEFT">
        <buttons>
          <Button mnemonicParsing="false" text="New contact" />
            <Button mnemonicParsing="false" onAction="#showHelpDialog" text="Help" />
            <Button mnemonicParsing="false" onAction="#exitProgram" text="Exit" />
        </buttons>
         <BorderPane.margin>
            <Insets left="-15.0" />
         </BorderPane.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </ButtonBar>
   </top>
</BorderPane>
